<% if user_signed_in? && can?(:like, idea) %>
    <% if like.present? && can?(:destroy, like) %>
        <%=link_to("Liked",like_path(like),method: :delete, class: "liked ")%> |
    <% elsif can?(:like, idea) %>
        <%=link_to("Like",idea_likes_path(idea),method: :post)%> |
    <% end %>
<% end %>
